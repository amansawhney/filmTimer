<div class="vertical-center">
  <div class="container">
    <div class="row">

      <div class=" text-center col-md-6 col-md-offset-3 col-xs-12 ">
        <div class="card animated fadeInUp">
          <%= form_tag("/dev_select", method: "post", class: "form-group") do %>
              <h1 class="">Select A Film</h1>
              <div class="dropdown" class="dropdown-menu">
                <select  class="form form-group form-control" name="name">
                <% array_of_shit = [''] %>
                <%= @films.find_each do |f| %>
                    <% if !array_of_shit.include?(f.name) %>
                        <% array_of_shit.push(f.name)%>
                        <option class="form-control"><%= f.name %> </option>
                    <% end %>
                <% end %>
              </select>
              </div>
              <br>
              <%= submit_tag("Next", class: "btn btn-primary") %>
          <% end %>
        </div>

      </div>


    </div>

  </div>
</div>






