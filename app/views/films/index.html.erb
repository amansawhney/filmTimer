<style>
  h1 {
    font-size: 10rem;
  }
  .film-btn {
    font-size: 3rem;
  }
</style>

<div class=" text-center col-sm-10 col-sm-offset-1 col-xs-12 ">
  <div class="card animated fadeInUp">
    <div id="countdownHolder" class="col-sm-5">
      <h1 id="countdown"></h1>
      <button  id="btn" onclick="button()" class="btn film-btn btn-primary">Start</button>
    </div>
    <div class = "col-sm-5">
      <label>Developer</label>
      <div class="progress">
        <div class="progress-bar" role="progressbar" aria-valuenow="70"
             aria-valuemin="0" aria-valuemax="100" style="width:70%">
        </div>
      </div>
      <label>Stop</label>
      <div class="progress">
        <div class="progress-bar" role="progressbar" aria-valuenow="70"
             aria-valuemin="0" aria-valuemax="100" style="width:70%">
        </div>
      </div>
      <label>Fixer</label>
      <div class="progress">
        <div class="progress-bar" role="progressbar" aria-valuenow="70"
             aria-valuemin="0" aria-valuemax="100" style="width:70%">
        </div>
      </div>
      <label>Wash</label>
      <div class="progress">
        <div class="progress-bar" role="progressbar" aria-valuenow="70"
             aria-valuemin="0" aria-valuemax="100" style="width:70%">
        </div>
      </div>
    </div>
    <audio id="audio">
      <source src="https://freesound.org/data/previews/219/219269_170215-lq.mp3" type="audio/mp3">
      Your browser does not support HTML5 audio.
    </audio>
  </div>
</div>




<%= javascript_include_tag('application') %>
<%= javascript_tag do %>
    var stepVar = 0;
    function button(){
        stepVar += 1
        var btn = document.getElementById("btn");
            if (stepVar == 1) {
            btn.innerHTML = "Countinue"
            countdown("countdown", <%= @films.first.time%>, 0);
            title("title", "Developer");
        } else if (stepVar == 2) {
            resetCounter();
            countdown("countdown", 1, 0);
        } else if (stepVar == 3) {
            resetCounter();
            countdown("countdown", 8, 0);
        } else if (stepVar == 4) {
            resetCounter();
            countdown("countdown", 10, 0);
        } else if (stepVar == 5) {
            resetCounter();
            btn.innerHTML = "End"
            countdown("countdown", 1, 0);
         }else {
            resetCounter();
            document.getElementById("countdown").innerHTML="0:00";

         }
    }
    function resetCounter() {
        var old = document.getElementById("countdown");
        var timer = document.createElement("H1");
        timer.id = "countdown";
        var div = document.getElementById("countdownHolder");
        div.appendChild(timer);
        old.remove();
    }





<% end %>

